<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BackGroundGreen">

    <TextView
        android:id="@+id/textViewAddEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input Event to Add"
        android:textColor="@color/White"
        android:textSize="30dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editableTextEventId"
        android:hint="Event Id" />

    <TextView
        android:id="@+id/textViewAddEventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input Event Name to Add"
        android:textColor="@color/White"
        android:textSize="30dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editableTextEventName"
        android:hint="Event Name" />

    <TextView
        android:id="@+id/textViewAddEventDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input Event Date to Add"
        android:textColor="@color/White"
        android:textSize="30dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editableTextEventDate"
        android:hint="Event Date: Year-Month-Day: XXXX-XX-XX"
        android:inputType="date"/>

</LinearLayout>
