<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BackGroundGreen">


    <TextView
        android:id="@+id/textViewAddTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input Team # to Add"
        android:textColor="@color/White"
        android:textSize="30dp"
        android:inputType="number"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewAddTeam"
        android:id="@+id/editableTextTeamNum"
        android:hint="Team Number" />

    <TextView
        android:id="@+id/textViewAddTeamName"
        android:layout_below="@+id/editableTextTeamNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input Team Name to Add"
        android:textColor="@color/White"
        android:textSize="30dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editableTextTeamName"
        android:layout_below="@+id/textViewAddTeamName"
        android:hint="Team Name" />

</RelativeLayout>
